<form class = "DoD.dialog">
    <div class="display-table dod-controls" style="width: 400px; max-width: 400px;">
        <table class="derived-stat">
            <tr>
                <th>{{localize "DoD.ui.dialog.monsterAttack"}}</th>
                <td>
                    <select name="selectMonsterAttack" class="selectMonsterAttack">
                        <option value="0" selected>&lt {{localize "DoD.ui.dialog.monsterAttackRandom"}} &gt</option>
                        {{selectOptions attacks localize=true valueAttr="index" nameAttr="index" labelAttr="name"}}
                    </select>
                </td>
            </tr>
        </table>
        <div class="text-box monster-attack-description" style="overflow-wrap: anywhere; word-break: break-word;">
        </div>
    </div>
</form>
