<div class="tab sheet-tab {{tabs.details.cssClass}}" data-group="primary" data-tab="{{tabs.details.id}}">
    <div class="item-tab dod-controls">
        <table class="simple-table">
            <tr>
                <th>{{localize "DoD.gear.weight"}}</th>
                <th>{{localize "DoD.gear.quantity"}}</th>
                <th>{{localize "DoD.gear.cost"}}</th>
                <th>{{localize "DoD.gear.supply"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="system.weight" type="text" value="{{system.weight}}" data-dtype="Number" />
                </td>
                <td>
                    <input name="system.quantity" type="text" value="{{system.quantity}}" data-dtype="Number" />
                </td>
                <td>
                    <input name="system.cost" type="text" value="{{system.cost}}" />
                </td>
                <td>
                    <select name="system.supply">
                        {{selectOptions config.supplyTypes selected=system.supply localize=true}}                            </select>
                </td>
            </tr>
        </table>
        <table class="simple-table">
            <tr>
                <th>{{localize "DoD.gear.type"}}</th>
                <th>{{localize "DoD.gear.memento"}}</th>
            </tr>
            <tr>
                <td>
                    <select name="system.type">
                        {{selectOptions config.itemTypes selected=system.type localize=true}}
                    </select>
                </td>
                <td>
                    <input type="checkbox" data-action="toggleMemento" {{checked system.memento}} />
                </td>
            </tr>
        </table>
        <table class="simple-table">
            <tr>
                <th>{{localize "DoD.ui.dialog.boons"}}</th>
                <th>{{localize "DoD.ui.dialog.banes"}}</th>
            </tr>
            <tr>
                <td>
                    <input name="system.boons" type="text" value="{{system.boons}}" />
                </td>
                <td>
                    <input name="system.banes" type="text" value="{{system.banes}}" />
                </td>
        </table>                
    </div>
</div>