<div class="tab sheet-tab {{tabs.details.cssClass}}" data-group="primary" data-tab="{{tabs.details.id}}">
    <div class="kin-tab dod-controls">
        <table class="simple-table kin-abilities">
            <tr>
                <th>
                    {{localize "DoD.ui.character-sheet.kinAbilities"}}
                </th>
                <th>
                    {{localize "DoD.ui.character-sheet.movement"}}
                </th>
            </tr>
            <tr>
                <td>
                    <input class="edit-kin-abilities" name="system.abilities" type="text" value="{{system.abilities}}" />
                </td>
                <td>
                    <input name="system.movement" type="text" value="{{system.movement}}" data-dtype="Number" />
                </td>
            </tr>
        </table>
    </div>
</div>