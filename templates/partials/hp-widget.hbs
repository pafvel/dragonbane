<div class="flex-justify-center">
    {{#if actor.isCharacter}}
        {{#if largeHP}}
            <div class="resource-points hit-points-large">
        {{else}}
            <div class="resource-points hit-points">
        {{/if}}
    {{else}}
        {{#if largeHP}}
            <div class="resource-points hit-points-npc-large">
        {{else}}
            <div class="resource-points hit-points-npc">
        {{/if}}
    {{/if}}
        <div class="resource-points-text-label">
            <label>{{localize "DoD.ui.character-sheet.hitPoints"}}</label>
        </div>
        <div class="resource-points-max-box">
            {{#if actor.isCharacter}}
            <label class="resource-points-max-label active-effect-property" data-property="system.hitPoints" title="{{localize "DoD.ui.character-sheet.hitPointsMax"}}">{{maxHP}}</label>
            {{else}}
            <input class="resource-points-max-label hit-points-max-label active-effect-property" data-property="system.hitPoints" title="{{localize "DoD.ui.character-sheet.hitPointsMax"}}" type="number" value="{{system.hitPoints.max}}" data-dtype="Number" />
            {{/if}}
        </div>
        {{#if largeHP}}
        <div class="resource-points-current-box">
            <input class="resource-points-current-label hit-points-current-label" title="{{localize "DoD.ui.character-sheet.hitPointsCurrent"}}" type="number" value="{{system.hitPoints.value}}" data-dtype="Number" />
        </div>
        {{else}}
        <div class="resource-points-box hit-points-box">
            {{#times lostHP}}
            <img class="resource-point" src="./systems/dragonbane/art/ui/point-checked.webp"/>
            {{/times}}
            {{#times currentHP}}
            <img class="resource-point" src="./systems/dragonbane/art/ui/point-unchecked.webp"/>
            {{/times}}
            {{#times fillHP}}
            <img class="resource-point invisible" src=""/>
            {{/times}}
        </div>
        {{/if}}
        {{#if actor.isCharacter}}
        <div class="death-rolls-box">
            <table>
                <tr>
                    <th rowspan="2"><button type="button" class="roll-deathRoll" data-action="roll-deathRoll"  title="{{localize "DoD.ui.character-sheet.rollDeathRoll"}}">{{localize "DoD.ui.character-sheet.deathRolls"}}</button></th>
                    <th><span class="death-rolls-success-label">{{localize "DoD.ui.character-sheet.successes"}}</span></th>
                    <th><span class="death-rolls-failure-label">{{localize "DoD.ui.character-sheet.failures"}}</span></th>
                </tr>
                <tr>
                    <td class="death-rolls-success">
                        {{#times deathRollsSuccesses }}
                        <img class="hit-point" src="./systems/dragonbane/art/ui/point-checked.webp"/>
                        {{/times}}
                        {{#times deathRollsSuccessesRemaining }}
                        <img class="hit-point" src="./systems/dragonbane/art/ui/point-unchecked.webp"/>
                        {{/times}}
                    </td>
                    <td class="death-rolls-failure">
                        {{#times deathRollsFailures }}
                        <img class="hit-point" src="./systems/dragonbane/art/ui/point-checked.webp"/>
                        {{/times}}
                        {{#times deathRollsFailuresRemaining }}
                        <img class="hit-point" src="./systems/dragonbane/art/ui/point-unchecked.webp"/>
                        {{/times}}
                    </td>
                </tr>
            </table>
        </div>
        {{/if}}
    </div>
</div>