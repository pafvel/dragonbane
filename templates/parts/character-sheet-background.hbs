<div class="tab {{tabs.background.cssClass}}" data-group="primary" data-tab="{{tabs.background.id}}">
    <div class="background-tab flexcol">
        <div>
            <table class="derived-stat">
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.kin"}}</th>
                    <!-- <td>{{ kinName }}</td> -->
                    <td><input class="kin-edit" name="kinName" type="text" value="{{kinName}}" /></td>
                </tr>
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.profession"}}</th>
                    <td><input class="profession-edit" name="professionName" type="text" value="{{professionName}}" /></td>
                </tr>
                <tr>
                    <th>{{localize "DoD.ui.character-sheet.age"}}</th>
                    <td>
                        <select class="age-edit" name="system.age">
                            {{selectOptions config.ageTypes selected=system.age localize=true}}
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="flexrow">

            <div class="text-box-editor">
                <div class="label-container">
                    <label>
                        {{localize "DoD.ui.character-sheet.weakness"}}
                    </label>
                </div>
                {{#if editable}}
                <prose-mirror
                    name="system.weakness"
                    value="{{system.weakness}}"
                    button="true"
                    editable="{{editable}}"
                    toggled="false">
                    {{{weaknessHTML}}}
                </prose-mirror>
                {{else}}
                {{{weaknessHTML}}}
                {{/if}}
            </div>
            <div class="text-box-editor">
                <div class="label-container">
                    <label>
                        {{localize "DoD.ui.character-sheet.appearance"}}
                    </label>
                </div>
                {{#if editable}}
                <prose-mirror
                    name="system.appearance"
                    value="{{system.appearance}}"
                    button="true"
                    editable="{{editable}}"
                    toggled="false">
                    {{{appearanceHTML}}}
                </prose-mirror>
                {{else}}
                {{{appearanceHTML}}}
                {{/if}}
            </div>
        </div>
        <div>
            <div class="text-box-editor">
                <div class="label-container">
                    <label>
                        {{localize "DoD.ui.character-sheet.notes"}}
                    </label>
                </div>
                {{#if editable}}
                <prose-mirror
                    name="system.notes"
                    value="{{system.notes}}"
                    button="true"
                    editable="{{editable}}"
                    toggled="false">
                    {{{notesHTML}}}
                </prose-mirror>
                {{else}}
                {{{notesHTML}}}
                {{/if}}
            </div>
        </div>
    </div>
    <hr>
</div>