<div class="tab sheet-tab {{tabs.description.cssClass}}" data-group="primary" data-tab="{{tabs.description.id}}">
    <div class="text-box-editor">
        {{#if editable}}
        <prose-mirror
            name="system.itemDescription"
            value="{{system.itemDescription}}"
            button="true"
            editable="{{editable}}"
            toggled="false">
            {{{itemDescriptionHTML}}}
        </prose-mirror>
        {{else}}
        {{{itemDescriptionHTML}}}
        {{/if}}
    </div>
    {{#if user.isGM}}
    <div class="text-box-editor">
        <div class="label-container">
            <label>
                {{localize "DoD.item-sheet.gmDescription"}}
            </label>
        </div>
        <prose-mirror
            name="system.gmDescription"
            value="{{system.gmDescription}}"
            button="true"
            editable="true"
            toggled="false">
            {{{gmDescriptionHTML}}}
        </prose-mirror>
    </div>
    {{/if}}
</div>