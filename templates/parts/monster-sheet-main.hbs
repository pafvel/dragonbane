<div class="tab {{tabs.main.cssClass}}" data-group="primary" data-tab="main">
    <div class="main-tab flexcol">

        {{!-- HP, Attack & Defend --}}
        {{#if observer}}
        <div class="flexrow">
            {{> "systems/dragonbane/templates/partials/hp-widget.hbs" }}
            <div class="monster-actions">
                <button class="monster-attack" type="button">
                    <img title="{{localize "DoD.ui.character-sheet.monsterAttackTooltip"}}" src="systems/dragonbane/art/ui/sword.webp"/>
                </button>
                <button class="monster-defend" type="button">
                    <img title="{{localize "DoD.ui.character-sheet.monsterDefendTooltip"}}" src="systems/dragonbane/art/ui/shield.webp"/>
                </button>
            </div>
        </div>
        {{/if}}

        {{!-- Skills, Weapons, Armor, Gear --}}
        {{#if observer}}
        <div class="text-box">
            <table>
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.skills"}}</b></th>
                    <td class="comma-list">
                        {{#each trainedSkills as |skill skillId|}}
                        <a class="rollable-skill sheet-table-data item-delete-key item" data-item-id="{{skill.id}}">{{skill.name}} {{skill.system.value}}</a>
                        {{/each}}
                    </td>
                </tr>
                {{#if tricks}}
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.tricks"}}</b></th>
                    <td class="comma-list">
                        {{#each tricks as |spell spellId|}}
                        <a class="rollable-skill sheet-table-data item-delete-key item" data-item-id="{{spell.id}}">{{spell.name}}</a>
                        {{/each}}
                    </td>
                </tr>
                {{/if}}
                {{#if spells}}
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.spells"}}</b></th>
                    <td class="comma-list">
                        {{#each spells as |spell spellId|}}
                        <a class="rollable-skill sheet-table-data item-delete-key item" data-item-id="{{spell.id}}">{{spell.name}}</a>
                        {{/each}}
                    </td>
                </tr>
                {{/if}}
                {{#if abilities}}
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.abilities"}}</b></th>
                    <td class="comma-list">
                        {{#each abilities as |ability abilityId|}}
                        <a class="sheet-table-data item-edit item-delete-key item" tabindex="-1" data-item-id="{{ability.id}}">{{ability.name}}</a>
                        {{/each}}
                    </td>
                </tr>
                {{/if}}
                {{#if equippedWeapons}}
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.weapons"}}</b></th>
                    <td class="comma-list">
                        {{#each equippedWeapons as |weapon weaponId|}}
                        <a class="rollable-damage sheet-table-data item-delete-key item" data-item-id="{{weapon.id}}">
                            {{weapon.name}} ({{weapon.system.damage}})</a>
                        {{/each}}
                    </td>

                </tr>
                {{/if}}

                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.equipped-armor"}}</b></th>
                    <td class="comma-list">
                        {{#if equippedArmor}}
                        <a class="item-edit sheet-table-data item-delete-key item" data-item-id="{{equippedArmor.id}}">
                            {{equippedArmor.name}} ({{equippedArmor.system.rating}})</a>
                        {{/if}}
                        {{#if equippedHelmet}}
                        <a class="item-edit sheet-table-data item-delete-key item" data-item-id="{{equippedHelmet.id}}">
                            {{equippedHelmet.name}} ({{equippedHelmet.system.rating}})</a>
                        {{/if}}
                    </td>
                </tr>

                {{#if inventory}}
                <tr class="item-list">
                    <th><b>{{localize "DoD.ui.character-sheet.gear"}}</b></th>
                    <td class="comma-list">
                    {{#each inventory as |item itemId|}}
                        <a class="item-edit sheet-table-data item-delete-key item" data-item-id="{{item.id}}">{{item.displayName}}</a>
                    {{/each}}
                    </td>
                </tr>
                {{/if}}

            </table>
        </div>
        {{/if}}
        
        {{!-- Traits --}}
        {{#if observer}}
        <div class="text-box-editor">
            <div class="label-container">
                <label>
                    {{localize "DoD.ui.character-sheet.traits"}}
                </label>
            </div>
            {{#if editable}}
            <prose-mirror
                name="system.traits"
                value="{{system.traits}}"
                button="true"
                editable="{{editable}}"
                toggled="false">
                {{{traitsHTML}}}
            </prose-mirror>
            {{else}}
            {{{traitsHTML}}}
            {{/if}}
        </div>
        {{/if}}        
        {{!-- Notes --}}
        <div class="text-box-editor">
            <div class="label-container">
                <label>
                    {{localize "DoD.ui.character-sheet.description"}}
                </label>
            </div>
            {{#if editable}}
            <prose-mirror
                name="system.description"
                value="{{system.description}}"
                button="true"
                editable="{{editable}}"
                toggled="false">
                {{{descriptionHTML}}}
            </prose-mirror>
            {{else}}
            {{{descriptionHTML}}}
            {{/if}}
        </div>
    </div>
</div>
